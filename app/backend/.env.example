# 数据库配置
# 使用SQLite (开发环境)
DATABASE_URL=sqlite:///db.sqlite3

# 使用PostgreSQL (生产环境)
# DATABASE_URL=postgresql://postgres:postgres@localhost:5432/course_management

# Django设置
DEBUG=True
SECRET_KEY=your-secret-key-here

# Redis配置 (可选)
